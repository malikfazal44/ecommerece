                <span asp-validation-for="CustName" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="CustPhone" class="control-label">Mobile Number</label>
                <input asp-for="CustPhone" type="tel" class="form-control" />
                <span asp-validation-for="CustPhone" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="CustEmail" class="control-label">Email</label>
                <input asp-for="CustEmail" class="form-control" />
                <span asp-validation-for="CustEmail" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="CustAddress" class="control-label">Address</label>
                <input asp-for="CustAddress" class="form-control" />
                <span asp-validation-for="CustAddress" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="CustCity" class="control-label">City</label>
                @*<input asp-for="CustCity" class="form-control" />*@
                <select class="form-control" asp-for="CustCity">
                    <option value="">---Select your City---</option>
