@section Scripts {

    <script>
        // Get the first select element
        var city = $('#city');

        // Add an event listener for when the first select changes
        city.on('change', function () {
            // Get the selected value from the first select
            var selectedValue = $(this).val();
            // Clear the options of the second select
            $('#tehsil').empty();

            // Depending on the selected value of the first select,
            // add different options to the second select
            switch (selectedValue) {
                case 'Sialkot':
                    $('#tehsil').append('<option value="sialkot">Sialkot</option>');
                    $('#tehsil').append('<option value="daska">Daska</option>');
                    $('#tehsil').append('<option value="sambrial">Sambrial</option>');
                    $('#tehsil').append('<option value="pasrur">Pasrur</option>');
                    break;
                case 'Gujranwala':
                    $('#tehsil').append('<option value="gujranwalaCity">Gujranwala City</option>');
                    $('#tehsil').append('<option value="gujranwalaSaddar">Gujranwala Saddar</option>');
                    $('#tehsil').append('<option value="kamonki">Kamonki</option>');
                    $('#tehsil').append('<option value="nowsheraVirkan">Nowshera Virkan</option>');
                    break;
                case 'Narowal':
                    $('#tehsil').append('<option value="narowal">Narowal</option>');
                    $('#tehsil').append('<option value="shakargarh">Shakargarh</option>');
                    break;
                default:
                    $('#tehsil').append('<option value="">Please select an option</option>');
            }
        });

    </script>


    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
