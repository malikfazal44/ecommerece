@model ecommerece.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-6">
        <img src="/data/img/placholdimage/signupgify.gif" class="img img-fluid" />"
    </div>
    <div class="col-6">
        <h1>Sign Up <br /> </h1>
        <h3>for Customer</h3>

        
        <hr />
        <div class="row">

            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="row">
                    <div class="col">
                        <div class="form-floating">
                            <input  class="form-control" id="username" name="username" placeholder="name@example.com">
                            <label for="username">Username</label>
                        </div>
                    </div>
                    
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <div class="form-floating">
                            <input class="form-control" type="password" id="password" name="password" placeholder="name@example.com" />
                            <label for="password">Password</label>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <div class="form-floating">
                            <input class="form-control" type="password" id="confirm_password" name="confirm_password" placeholder="name@example.com" />
                            <label for="confirm_password">Confirm Password</label>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <div class="form-floating">
                            <input asp-for="CustName" class="form-control" placeholder="name@example.com" />
                            <label asp-for="CustName">Full Name</label>
                            <span asp-validation-for="CustName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="email" asp-for="CustEmail" placeholder="name@example.com" class="form-control" />
                            <label asp-for="CustEmail">Email</label>
                        </div>
                    </div>
                    <div class="col-md-6 mr-2">
                        <div class="form-floating">
                            <input type="tel" asp-for="CustPhone" placeholder="name@example.com" class="form-control" />
                            <label asp-for="CustPhone">Mobile Phone</label>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <div class="form-floating">
                            <div class="form-check form-check-inline">
                                <input asp-for="CustGender" class="form-check-input" type="radio" name="gender" id="Male" value="Male">
                                <label asp-for="CustGender" class="form-check-label" for="inlineRadio1"><b>Male</b></label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="CustGender" class="form-check-input" type="radio" name="gender" id="Female" value="Female">
                                <label asp-for="CustGender" class="form-check-label" for="inlineRadio2"><b>Female</b></label>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select class="form-control" asp-for="CustCity">
                                <option selected>Select your City</option>
                                <option value="1">Sialkot</option>
                                <option value="2">Lahore</option>
                                <option value="3">Islamabad</option>
                                <option value="4">Karachi</option>
                            </select>
                            <span asp-validation-for="CustCity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mr-2">
                        <div class="form-floating">
                            <input asp-for="CustAddress" class="form-control" placeholder="name@example.com" />
                            <label asp-for="CustAddress">Address</label>
                            <span asp-validation-for="CustAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col">
                        <div class="form-floating">
                            <input type="file" id="custimg" name="custimg" class="form-control" placeholder="name@example.com" />
                            <label asp-for="CustImg" class="control-label">Image</label>
                            <span asp-validation-for="CustImg" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group d-flex justify-content-end" style="position: relative; top: 39px;">
                    <input type="submit" value="Create" class=" btn btn-success" />
                </div>
            </form>
                 
            
        </div>
        

        <div>
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        

    </script>


    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
