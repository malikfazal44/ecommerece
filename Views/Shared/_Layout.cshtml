<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ecommerece</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/jquery/zoom/easyzoom.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ecommerece.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="~/lib/data-tables/jquery.datatables.min.css" rel="stylesheet" />
    
</head>
<body>
    <header>
        <nav class="position-fixed navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand  " asp-area="" asp-controller="Home" asp-action="Index">ecommerece</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class=" nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Products
                            </a>
                            
                            <ul class=" dropdown-menu" id="category_list" aria-labelledby="navbarDropdown">
                            
                            </ul>
                           
                        </li>
                        <li class="nav-item ">
                            <a class=" nav-link" href="/Home/AboutUs" id="navbarDropdown" role="button" aria-expanded="false">
                                About us
                            </a>
                            
                        </li>
                        <li class="nav-item ">
                            <a class=" nav-link " href="/Home/ContactUs" id="navbarDropdown" role="button" aria-expanded="false">
                                Contact Us
                            </a>
                            
                        </li>
                        <li class="nav-item ">
                            <a class=" nav-link" href="/Home/FAQs" id="navbarDropdown" role="button" aria-expanded="false">
                                FAQs
                            </a>
                            
                        </li>
                        
                 
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div style="height:60px; background-color:#e6ffe6;"></div>

    <div class="container ">
        <footer class="py-5">
            <div class="row">
                <div class="col-2">
                    <h5>About Us</h5>
                    <ul class="nav flex-column">

                        <li class="nav-item mb-2">One Shopping Point</li>
                        <li class="nav-item mb-2">Buy Everything You Want</li>
                        <li class="nav-item mb-2">Do Your Shopping at Single Platform</li>
                        <li class="nav-item mb-2">Best Ecommerce platform in Pakistan</li>
                    </ul>
                </div>

                <div class="col-2">
                    <h5>Go to</h5>
                    <ul class="nav flex-column">

                        <li class="nav-item mb-2"><a href="#">Men</a></li>
                        <li class="nav-item mb-2"><a href="#">Women</a></li>
                        <li class="nav-item mb-2"><a href="#">Kids</a></li>
                        <li class="nav-item mb-2"><a href="#">Home Appliences</a></li>
                    </ul>
                </div>

                <div class="col-2">
                    <h5>Contact Us</h5>
                    <ul class="nav flex-column">

                        <li class="nav-item mb-2"><a href="#">Facebook</a></li>
                        <li class="nav-item mb-2"><a href="#">Whatsapp</a></li>
                        <li class="nav-item mb-2"><a href="#">Instagram</a></li>
                        <li class="nav-item mb-2"><a href="#">Imo</a></li>
                    </ul>
                </div>

                <div class="col-4 offset-1">
                    <form>
                        <h5>Subscribe to our newsletter</h5>
                        <p>Monthly digest of whats new and exciting from us.</p>
                        <div class="d-flex w-100 gap-2">
                            <label for="newsletter1" class="visually-hidden">Email address</label>
                            <input id="newsletter1" type="text" class="form-control" placeholder="Email address">
                            <button class="btn btn-primary" type="button">Subscribe</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="d-flex justify-content-between py-4 my-4 border-top">
                <p>© 2021 Company, Inc. All rights reserved.</p>
                <ul class="list-unstyled d-flex">
                    <li class="ms-3"><a class="link-dark" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#twitter"></use></svg></a></li>
                    <li class="ms-3"><a class="link-dark" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#instagram"></use></svg></a></li>
                    <li class="ms-3"><a class="link-dark" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook"></use></svg></a></li>
                </ul>
            </div>
        </footer>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/zoom/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/zoom/easyzoom.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/data-tables/jquery.datatables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        
        $(document).ready(function () {


            $(function () {
                //add t0 cart icon length
                if (localStorage.getItem("CartLength") > 0) {
                    $('#cart-in-nav').html(localStorage.getItem("CartLength"));
                }
            });
            $(function () {
                //console.log(localStorage.getItem("wishlistLength"));
                //wishlist length
                    //if (localStorage.getItem("wishlistLength") > 0) {
                    //    $('#wishlist-in-nav').html(localStorage.getItem("wishlistLength"));
                    //}
                
            });

            // get category list with ajax call
            $.ajax({
                type: 'GET',
                url: '/Categories/GetCategoryList',
                success: function (data) {
                    
                    $.each(data, function (index, category) {
                        let li = "";
                        li += "<li style='max-width: auto;'>";
                        //console.log(index);
                        //console.log(category);
                        //alert(category[index].catId);
                        //alert(data[index].catId);
                        li += "<a class='list-group-item list-group-item-action' href = '/Products/Index?cat_id=" + category.catId + "'>" + category.catName + "</a>";
                        li += "</li>";
                        $('#category_list').append(li);
                    });
                    //alert(li);
                }
            });

            

        });
    </script>
