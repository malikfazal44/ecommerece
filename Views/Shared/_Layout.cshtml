    <script src="~/lib/data-tables/jquery.datatables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // get category list with ajax call
        $(document).ready(function () {


                        //add t cart icon length
                        if (localStorage.getItem("CartLength") != 0) {
                            $('#cart-in-nav').html(localStorage.getItem("CartLength"));
                        }
    

            $.ajax({
                type: 'GET',
                url: '/Categories/GetCategoryList',
                success: function (data) {
                    
                    $.each(data, function (index, category) {
                        let li = "";
                        li += "<li>";
                        //console.log(index);
                        //console.log(category);
                        //alert(category[index].catId);
                        //alert(data[index].catId);
                        li += "<a href = '/Products/Index?cat_id=" + category.catId + "'>" + category.catName + "</a>";
                        li += "</li>";
                        $('#category_list').append(li);
                    });
                    //alert(li);
                }
            });

            

        });
    </script>
