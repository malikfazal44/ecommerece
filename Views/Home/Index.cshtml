@model ecommerece.Models.Product
@{
    ViewData["Title"] = "Home Page";
    // following viewbag come from index of home controller
    IList<Product> Product_cards = ViewBag.ProductCard;
    IList<Category> Category_flipcard = ViewBag.CategoryFlipCard;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        /* tour card css */

           .sale-card {
               width: 30%;
               margin: auto;
               margin-top: 30px;
           }

           .card {
               margin-right: 25px;
           }

           .card-sticker span {
               background-color: rgb(8, 168, 168);
               color: white;
               padding: 5px;
               border: 1px solid transparent;
               border-radius: 50px;
               position: absolute;
               top: -15px;
               right: -15px;
           }

           .discount-list span {
               background-color: rgb(237 100 100);
               color: white;
               padding: 4px;
               position: relative;
               top: -40px;
           }

           .text-muted {
               position: absolute;
               bottom: 10px;
               right: 20px;
           }

           .card:hover {
               position: relative;
               -webkit-box-shadow: 0 20px 40px rgba(72, 78, 85, .6);
               box-shadow: 0 20px 40px rgba(72, 78, 85, .6);
               -webkit-transform: translateY(-7px);
               -moz-transform: translateY(-7px);
               -ms-transform: translateY(-7px);
               -o-transform: translateY(-7px);
               transform: translateY(-7px);
           }

           /* tour card css ends here  */
           /*flip card starts*/
           .container {
                transform-style: preserve-3d;
            }

            .container .box {
                position: relative;
                width: 300px;
                height: 300px;
                margin: 20px;
                transform-style: preserve-3d;
                perspective: 1000px;
                cursor: pointer;
            }

            .container .box .body {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                transform-style: preserve-3d;
                transition: 0.9s ease;
            }



            .container .box .body .imgContainer {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                transform-style: preserve-3d;
            }

            .container .box .body .imgContainer img {
                position: absolute;
                top: 0;
                left: 0;
                width: 90%;
                height: 90%;
                border-radius: 10px;
                object-fit: cover;
            }

            .container .box .body .content {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: #333;
                backface-visibility: hidden;
                transform-style: preserve-3d;
                transform: rotateY(180deg);
            }

            .container .box:hover .body {
                transform: rotateY(180deg);
            }

            .container .box .body .content div {
                transform-style: preserve-3d;
                padding: 20px;
                background: linear-gradient(45deg, #FE0061, #FFEB3B);
                transform: translateZ(100px);
            }

            .container .box .body .content div h3 {
                letter-spacing: 1px;
            }

            .text-white {
                text-align: center;
                margin-bottom: 15px;
            }

            .flip-card-link {
                text-decoration: none;
                padding: 4px;
                border: 2px solid white;
            }

    </style>
</head>
<body>
    <div class="row">
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src=" /data/img/images/latestoutfit.jpeg" class="d-block w-100 h-50" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Girl's Latest Outfit</h5>
                        <p>We have all the variety related Women's Outfit'.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src=" /data/img/images/kidsoutfit.jpeg" class="d-block w-100 h-50" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Kid's Latest Outfit</h5>
                        <p>We have all the variety related Kid's Outfit'.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="/data/img/images/menoutfit.jpeg" class="d-block w-100 h-50" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Men's Latest Outfit</h5>
                        <p>We have all the variety related Men's Outfit'.</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <br />
    <div class="row ">

        <h3 class="display-4 d-flex justify-content-center">Who are We?</h3>
        <p class="d-flex justify-content-center">
            Theta Ecommerce platform offers a user-friendly and seamless shopping experience,
            with a wide variety of products and competitive prices.
            We strive to provide excellent customer service and fast delivery.
            Trust us for all your online shopping needs.
        </p>
    </div>
    <hr />
    <div class="row">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-lg-4">
                
                    <h3 class="d-flex justify-content-center bg-danger rounded p-1">Our Top Products</h3>
                
            </div>
            <div class="col-4"></div>
        </div>
        @*product cards*@
        @foreach (Product card in Product_cards)
        {
            <div class="sale-card">
                <div class="card-group">
                    <div class="card">
                        @{
                            string[] Product_Images = card.ProductImg.Split(",");
                            if (string.IsNullOrEmpty(Product_Images[0]))
                            {
                                            <a href="/Products/Details?id=@card.ProductId"><img src="/data/img/placholdimage/placeholder_image.png" style="max-height: 225px;" class="card-img-top" /></a>
                            }
                            else
                            {
                                        <a href="/Products/Details?id=@card.ProductId"><img src="@Product_Images[0]" style="max-height: 225px;" class="card-img-top" /></a>
                            }
                        }


                        <div class="discount-list"><span><b> @card.ProductPrice</b> Rs</span></div>
                        <div class="card-body">
                            <h4 class="card-title">@card.ShortDecsc</h4>
                            <p class="card-text">@card.LongDesc</p>
                            <p class="card-text"><small class="text-muted">Delivery in @card.DeliveryDays days</small></p>
                        </div>
                    </div>
                </div>

            </div>
        }
        <br />
        <div class="row">
            <div class="col-3"></div>
            <div class="col-3"></div>
            <div class="col-3"></div>
            <div class="col-3">
                <a href="/Products/Index" style="text-decoration:none;" class="d-flex justify-content-right roudend">
                    More Products
                </a>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-lg-4">

                <h3 class="d-flex justify-content-center bg-danger rounded p-1">Our Top Categories</h3>

            </div>
            <div class="col-4"></div>
        </div>
    </div>
    <div class="row">
        @foreach (Category flip in Category_flipcard)
        {
            <div class="container d-flex align-content-center justify-content-center flex-wrap col-4">
                <div class="box">
                    <div class="body">
                        <div class="imgContainer">
                            <img src="@flip.CatImage" alt="">
                        </div>
                        <div class="content d-flex flex-column align-items-center justify-content-center">
                            <div>
                                <h3 class="text-white fs-5">@flip.CatName</h3>
                                <a href="/Products/Index?cat_id=@flip.CatId" class="fs-6 text-white flip-card-link"> View Category</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        
    </div>
    
</body>
</html>

